{
  "branches": [
    "main",
    {
      "name": "+([0-9])\\.+([0-9])-rc",
      "prerelease": "rc",
      "channel": "rc"
    },
    {
      "name": "+([0-9])\\.+([0-9])\\.x-maintenance",
      "channel": "${name}",
      "range": "$1.$2.x"
    }
  ],
  "plugins": [
    "@semantic-release/commit-analyzer",
    [
      "@semantic-release/exec",
      {
        "verifyConditionsCmd": "if grep -q '^## \\[Unreleased\\]' CHANGELOG.md; then echo 'ERROR: CHANGELOG.md has not been updated for the new release.'; exit 1; fi",
        "generateNotesCmd": "awk '/^## / { if (s) exit; s=1 } s{ print }' CHANGELOG.md",
        "prepareCmd": "./.github/scripts/mk-release-package.sh --version ${nextRelease.version} --package firebolt-cpp-client"
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": [
          { "path": "build/firebolt-cpp-client-*.tar.gz", "label": "Source Code (tar.gz)" }
        ]
      }
    ]
  ]
}
