    {
      "name": "speak",
      "summary": "Speak the uttered text using the TTS engine",
      "params": [
        {
          "name": "text",
          "summary": "String to be converted to Audio for speech",
          "schema": {
            "type": "string"
          },
          "required": true
        },
        {
          "name": "callsign",
          "summary": "App calling text to speech",
          "schema": {
            "type": "string"
