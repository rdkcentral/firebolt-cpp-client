      "examples": [
        {
          "name": "Getting the result of speak",
          "params": [
            {
              "name": "text",
              "value": "I am a text waiting for speech."
            },
            {
              "name": "callsign",
              "value": "appA"
            }
          ],
          "result": {
            "name": "result",
            "value": {
              "speechid": 1,
              "TTS_Status": 0,
              "success": true
            }
          }
        }
      ]
