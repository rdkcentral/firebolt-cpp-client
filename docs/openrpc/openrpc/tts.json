{
  "openrpc": "1.2.4",
  "info": {
    "title": "TextToSpeech",
    "description": "A module for controlling and accessing Text To Speech over Firebolt.",
    "version": "0.0.0"
  },
  "methods": [
    {
      "name": "isttsenabled",
      "summary": "Returns whether the TTS engine is enabled or disabled",
      "params": [],
      "tags": [
        {
          "name": "capabilities",
          "x-uses": [
            "xrn:firebolt:capability:accessibility:voiceguidance"
          ]
        }
      ],
      "result": {
        "name": "ttsenabled",
        "summary": "Returns whether the TTS engine is enabled or disabled",
        "schema": {
          "$ref": "#/components/schemas/TTSEnabled"
        }
      },
      "examples": [
        {
          "name": "Whether TTS is enabled",
          "params": [
          ],
          "result": {
            "name": "ttsenabled",
            "value": {
              "isenabled": true,
              "TTS_Status": 0
            }
          }
        }
      ]
    },
    {
      "name": "listvoices",
      "summary": "Get the list of Text to speech voices supported by the platform",
      "params": [
        {
          "name": "language",
          "summary": "Request language in ISO 3166-1 Alpha-2",
          "schema": {
            "type": "string"
          },
          "required": true
        }
      ],
      "tags": [
        {
          "name": "capabilities",
          "x-uses": [
            "xrn:firebolt:capability:accessibility:voiceguidance"
          ]
        }
      ],
      "result": {
        "name": "listvoices",
        "summary": "The list of voices supported for the language",
        "schema": {
          "$ref": "#/components/schemas/ListVoicesResponse"
        }
      },
      "examples": [
        {
          "name": "Getting the list of voices",
          "params": [
            {
              "name": "language",
              "value": "en-US"
            }
          ],
          "result": {
            "name": "voiceList",
            "value": {
              "TTS_Status": 0,
              "voices": ["carol","tom"]
            }
          }
        }
      ]
    },
