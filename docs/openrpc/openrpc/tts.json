          "summary": "Voice used by Text to speech"
        },
        {
          "name": "volume",
          "summary": "Volume for Text to speech",
          "schema": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
          }
        },
        {
          "name": "primvolduckpercent",
          "summary": "Prime Volume duck percent for Text to speech",
          "schema": {
            "type": "integer",
            "minimum": 0,
            "maximum": 100
