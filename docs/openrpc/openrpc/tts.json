      "result": {
        "name": "setttsconfiguration",
        "summary": "Settings the list of configurations",
        "schema": {
          "$ref": "#/components/schemas/TTSStatusResponse"
        }
      },
      "examples": [
        {
          "name": "Setting the TTS Configuration",
          "params": [
            {
              "name": "ttsendpoint",
              "value": "http://url_for_the_text_to_speech_processing_unit"
            },
            {
              "name": "ttsendpointsecured",
              "value": "https://url_for_the_text_to_speech_processing_unit"
            },
            {
              "name": "language",
              "value": "en-US"
            },
            {
              "name": "voice",
              "value": "carol"
            },
            {
              "name": "volume",
              "value": 100
            },
            {
              "name": "primvolduckpercent",
              "value": 25
            },
            {
              "name": "rate",
              "value": 50
            },
            {
              "name": "speechrate",
              "value": "medium"
            },
            {
              "name": "fallbacktext",
              "value": {
                "scenario": "offline",
                "value": "No Internet connection"
              }
            }
          ],
          "result": {
            "name": "result",
            "value": {
              "TTS_Status": 0,
              "success": true
            }
          }
        }
      ]
